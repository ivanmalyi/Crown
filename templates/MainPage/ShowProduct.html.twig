<div id="product-target{{ Product.getProductId }}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div  class="modal-content title-vip">
            <div class="row">
                <div class="col-xs-5 col-sm-6">
                    <br>
                    <img class="rounded d-block w-50" src='/asset/img/products/{{ Product.getProductId }}/{{ Product.getAvatar }}'>
                </div>
                <div class="col-xs-5 col-sm-6">
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getName }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getTitleName }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getYear }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getYear }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getHeight }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getHeight }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getColor }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getColor }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getCountry }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getCountry }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getCity }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getCity }}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col-xs-6 col-sm-4">
                                <span><a>{{ MainPageData.getMenu.getDescription }}: </a></span>
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <a style="color: white">{{ Product.getDescription }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-5 col-sm-12">
                    <div id="carouselExampleIndicators{{ Product.getProductId }}" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {% for image in Product.getImages %}
                                {% if loop.index == 1 %}
                                    <li data-target="#carouselExampleIndicators{{ Product.getProductId }}" data-slide-to="{{ loop.index }}" class="active"></li>
                                {% else %}
                                    <li data-target="#carouselExampleIndicators{{ Product.getProductId }}" data-slide-to="{{ loop.index }}"></li>
                                {% endif %}
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for image in Product.getImages %}
                                {% if loop.index == 1 %}
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="/asset/img/products/{{ Product.getProductId }}/{{ image }}">
                                    </div>
                                {% else %}
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/asset/img/products/{{ Product.getProductId }}/{{ image }}">
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators{{ Product.getProductId }}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only"><-</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators{{ Product.getProductId }}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">-></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>