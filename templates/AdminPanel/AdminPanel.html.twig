{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <form class="text-center m-5">
                <div class="form-group">
                    <div class="main-window">
                        <span class="form-control-lg"><a>Локализация</a></span>
                        <div class="row">
                            <div class="col-xs-5 col-sm-5">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#localizationAdd">
                                    Добавить локализацию
                                </button>
                                {% include "AdminPanel/LocalizationAdd.html.twig" %}
                            </div>
                            <div class="col-xs-5 col-sm-2"></div>
                            <div class="col-xs-5 col-sm-2">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#localizationChange">
                                    Изменить локализацию
                                </button>
                                {% set localizations = { 'localizations': adminData.getLocalizations } %}
                                {% include "AdminPanel/LocalizationChange.html.twig" with localizations %}
                            </div>
                        </div>

                    <br>
                    <div class="form-group">
                        <span class="form-control-lg"><a>Страна</a></span>
                        <div class="row">
                            <div class="col-xs-5 col-sm-5">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#countryAdd">
                                    Добавить страну
                                </button>
                                {% include "AdminPanel/CountryAdd.html.twig"  with localizations %}
                            </div>
                            <div class="col-xs-5 col-sm-2"></div>
                            <div class="col-xs-5 col-sm-5">
                                <div class="col-xs-5 col-sm-5">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#countryChange">
                                        Изменить страну
                                    </button>
                                    {% include "AdminPanel/CountryChange.html.twig"  with { 'countries': adminData.getCountries, 'localizations': adminData.getLocalizations} %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="form-control-lg"><a>Город</a></span>
                        <div class="row">
                            <div class="col-xs-5 col-sm-5">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cityAdd">
                                    Добавить город
                                </button>
                                {% include "AdminPanel/CityAdd.html.twig"  with { 'countries': adminData.getCountries, 'localizations': adminData.getLocalizations} %}
                            </div>
                            <div class="col-xs-5 col-sm-2"></div>
                            <div class="col-xs-5 col-sm-5">
                                <div class="col-xs-5 col-sm-5">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cityChange">
                                        Изменить город
                                    </button>
                                    {% include "AdminPanel/CityChange.html.twig"  with { 'countries': adminData.getCountries, 'localizations': adminData.getLocalizations} %}
                                </div>
                            </div>
                        </div>
                    </div>

                        <br><br>
                        <div class="form-group">
                            <span class="form-control-lg"><a>Цвет</a></span>
                            <div class="row">
                                <div class="col-xs-5 col-sm-5">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#colorAdd">
                                        Добавить цвет
                                    </button>
                                    {% include "AdminPanel/ColorAdd.html.twig"  with localizations %}
                                </div>
                                <div class="col-xs-5 col-sm-2"></div>
                                <div class="col-xs-5 col-sm-5">
                                    <div class="col-xs-5 col-sm-5">
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#colorChange">
                                            Изменить цвет
                                        </button>
                                        {% include "AdminPanel/ColorChange.html.twig"  with { 'colors': adminData.getColors, 'localizations': adminData.getLocalizations} %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br><br>
                    <!------------------------------------------>
                    <div class="form-group main-window" id="new_product">
                        <span class="form-control-lg"><h2>Добавить продукт</h2></span>
                        <div class="row">
                            <form class="text-center m-5">
                                <div class="form-group" >
                                    <span class="form-control-lg"><a>Введите имя продукта*</a></span>
                                    <input id="add_product_name" class="form-control form-control-lg text-center" type="text" placeholder="Name" required>
                                </div>
                                <div class="form-group" >
                                    <label class="checkbox-inline">
                                        <input id="status" type="checkbox" value="" checked>Показывать на сайте
                                    </label>
                                    <label  class="checkbox-inline">
                                        <input id="vip" type="checkbox" value="">VIP
                                    </label>
                                </div>
                                <div class="form-group" >
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-2">
                                            <span class="input-group-text form-control-lg"><a>Рост, см</a></span>
                                        </div>
                                        <div class="col-xs-6 col-sm-3">
                                            <input id="add_height" class="form-control form-control-lg text-center" type="number" placeholder="Height" required>
                                        </div>
                                        <div class="col-xs-6 col-sm-2"></div>
                                        <div class="col-xs-6 col-sm-2">
                                            <span class="input-group-text form-control-lg"><a>Год</a></span>
                                        </div>
                                        <div class="col-xs-6 col-sm-3">
                                            <input id="add_year" class="form-control form-control-lg text-center" type="number" placeholder="Year" required>
                                        </div>
                                    </div>
                                </div>
                                <span class="input-group-text form-control-lg"><a>Введите титульное имя</a></span>
                                <div id="add_product_title_name">
                                    {% for localization in adminData.getLocalizations %}
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-3">
                                                    <span class="input-group-text form-control-lg"><a>{{ localization.getTag }}</a></span>
                                                </div>
                                                <div class="col-xs-6 col-sm-9">
                                                    <input id="add_product_title_name" class="form-control form-control-lg text-center" type="text" placeholder="Title name" required>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <span class="input-group-text form-control-lg"><a>Введите описание</a></span>
                                <div id="add_product_description">
                                    {% for localization in adminData.getLocalizations %}
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-3">
                                                    <span class="input-group-text form-control-lg"><a>{{ localization.getTag }}</a></span>
                                                </div>
                                                <div class="col-xs-6 col-sm-9">
                                                    <textarea class="form-control" rows="8" id="description"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <div id="dropdownCountryForProduct">
                                                {% for country in adminData.getCountries %}
                                                    <a id="{{ country.getId }}" onclick="findCitiesForProduct(this.id)" class="dropdown-item" style="cursor: pointer">{{ country.getName }}</a>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div id="dropdownCityForProduct">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="select_color">Выбрать цвет</label>
                                    <select id="select_color" class="form-control">
                                        <option selected>Цвет...</option>
                                        {% for color in adminData.getColors %}
                                            <option value="{{ color.getId }}">{{ color.getName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" onclick="addProduct()">Добавить продукт</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <br><br>
                    <!------------------------------------------>
                    <div class="form-group main-window" id="change_product">
                        <span class="form-control-lg"><h2>Изменить продукт</h2></span>
                        <div class="row">
                            <form class="text-center m-5">
                                <div class="form-group" >
                                    <label for="select_product">Выбрать продукт</label>
                                    <select onclick="findProduct()" id="select_product" class="form-control">
                                        <option selected>Продукт...</option>
                                        {% for product in adminData.getProducts %}
                                            <option value="{{ product.getId }}">{{ product.getName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                                <div class="form-group" >
                                    <span class="form-control-lg"><a>Введите имя продукта*</a></span>
                                    <input id="change_product_name" class="form-control form-control-lg text-center" type="text" placeholder="Name" required>
                                    <input id="product_id" style="display: none">
                                </div>
                                <div class="form-group" >
                                    <label class="checkbox-inline">
                                        <input id="status_change" type="checkbox" value="" checked>Показывать на сайте
                                    </label>
                                    <label  class="checkbox-inline">
                                        <input id="vip_change" type="checkbox" value="">VIP
                                    </label>
                                </div>
                                <div class="form-group" >
                                    <div class="row">
                                        <div class="col-xs-6 col-sm-2">
                                            <span class="input-group-text form-control-lg"><a>Рост, см</a></span>
                                        </div>
                                        <div class="col-xs-6 col-sm-3">
                                            <input id="change_height" class="form-control form-control-lg text-center" type="number" placeholder="Height" required>
                                        </div>
                                        <div class="col-xs-6 col-sm-2"></div>
                                        <div class="col-xs-6 col-sm-2">
                                            <span class="input-group-text form-control-lg"><a>Год</a></span>
                                        </div>
                                        <div class="col-xs-6 col-sm-3">
                                            <input id="change_year" class="form-control form-control-lg text-center" type="number" placeholder="Year" required>
                                        </div>
                                    </div>
                                </div>
                                <span class="input-group-text form-control-lg"><a>Введите титульное имя</a></span>
                                <div id="change_product_title_name">
                                    {% for localization in adminData.getLocalizations %}
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-3">
                                                    <span class="input-group-text form-control-lg"><a>{{ localization.getTag }}</a></span>
                                                </div>
                                                <div class="col-xs-6 col-sm-9">
                                                    <input id="change_product_title_name" class="form-control form-control-lg text-center" type="text" placeholder="Title name" required>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <span class="input-group-text form-control-lg"><a>Введите описание</a></span>
                                <div id="change_product_description">
                                    {% for localization in adminData.getLocalizations %}
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-3">
                                                    <span class="input-group-text form-control-lg"><a>{{ localization.getTag }}</a></span>
                                                </div>
                                                <div class="col-xs-6 col-sm-9">
                                                    <textarea class="form-control" rows="8" id="description"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <div id="dropdownCountryForProductChange">
                                                {% for country in adminData.getCountries %}
                                                    <a id="{{ country.getId }}" onclick="findCitiesForCountryInProduct(this.id, 0)" class="dropdown-item" style="cursor: pointer">{{ country.getName }}</a>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div id="dropdownCityForProductChange">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="select_color_change">Выбрать цвет</label>
                                    <select id="select_color_change" class="form-control">
                                        <option selected>Цвет...</option>
                                        {% for color in adminData.getColors %}
                                            <option value="{{ color.getId }}">{{ color.getName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" onclick="updateProduct()">Изменить продукт</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {#
{% if login == inputLogin and password == inputPassword %}

    {% endif %}#}
{% endblock %}