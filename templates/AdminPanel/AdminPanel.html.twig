{% extends "base.html.twig" %}

{% block body %}
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-2">
                <h3>Login</h3>
                <form>
                    <div class="form-group">
                        <input id="login" type="text" class="form-control" placeholder="Your Login *" value="" />
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" class="form-control" placeholder="Your Password *" value="" />
                    </div>
                    <div class="form-group">
                        <input onclick="send()" type="submit" class="btnSubmit" value="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}