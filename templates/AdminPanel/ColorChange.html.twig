<!-- Modal -->
<div class="modal fade" id="colorChange" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Изменить цвет</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div id="dropdownColor">
                            {% for color in colors %}
                                <a id="{{ color.getId }}" onclick="findColor(this.id)" class="dropdown-item" href="#">{{ color.getName }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-9">
                        <form class="text-center m-5">
                            <div class="form-group">
                                <span class="form-control-lg"><a>Измените название цвета*</a></span>
                                <input id="change_color_name" class="form-control form-control-lg text-center" type="text" placeholder="Name" required>
                                <input id="color_id" style="display: none">
                            </div>
                            <div class="form-group" >
                                <span class="input-group-text form-control-lg"><a>Измените титульное название цвета</a></span>
                            </div>
                            <div id="change_color_title_name">
                                {% for localization in localizations %}
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-xs-6 col-sm-3">
                                                <!--параметр name заполняется в функции findCountry-->
                                                <span class="input-group-text form-control-lg"><a>{{ localization.getTag }}</a></span>
                                            </div>
                                            <div class="col-xs-6 col-sm-9">
                                                <input id="add_color_title_name" class="form-control form-control-lg text-center" type="text" placeholder="Title name" required>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" onclick="updateColor()">Изменить</button>
            </div>
        </div>
    </div>
</div>
