<!-- Modal -->
<div class="modal fade" id="localizationChange" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Изменить локализацию</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div id="dropdownLocalization">
                            {% for localization in localizations %}
                                <a id="{{ localization.getId }}" onclick="findLocalization(this.id)" class="dropdown-item" href="#">{{ localization.getName }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-9">
                        <form class="text-center m-5">
                            <div class="form-group" >
                                <span class="form-control-lg"><a>Название языка*</a></span>
                                <input id="change_localization_name" class="form-control form-control-lg text-center" type="text" placeholder="Name" required>
                            </div>
                            <div class="form-group" >
                                <span class="form-control-lg"><a>Тег*</a></span>
                                <input id="change_localization_tag" class="form-control form-control-lg text-center" type="text" placeholder="tag" required>
                            </div>
                        </form>
                    </div>
            </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="change-locale" type="button" class="btn btn-primary" onclick="updateLocalization(this.value)">Изменить</button>
            </div>
        </div>
    </div>
</div>
